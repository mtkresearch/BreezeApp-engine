{
  "apiVersion": "2.0",
  "globalSettings": {
    "defaultTimeoutMs": 30000,
    "logLevel": "INFO"
  },
  "runnerConfigurations": {
    "TEXT_GENERATION": {
      "defaultRunner": "mtk_llm_runner_v1",
      "runners": {
        "mtk_llm_runner_v1": {
          "type": "REAL",
          "priority": 1,
          "model": {
            "modelName": "breeze-tiny-3b-instruct",
            "modelPath": "config_breezetiny_3b_instruct.yaml",
            "parameters": {
              "maxInitAttempts": 5,
              "initDelayMs": 200,
              "initTimeoutMs": 30000,
              "cleanupTimeoutMs": 5000,
              "maxRetryAttempts": 3,
              "retryDelayMs": 1000,
              "defaultTemperature": 0.0,
              "defaultTopK": 5,
              "defaultTopP": 0.9,
              "defaultRepetitionPenalty": 1.1,
              "defaultMaxTokens": 2048,
              "enableStreaming": true,
              "streamingBufferSize": 1024,
              "streamingTimeoutMs": 30000,
              "enableModelCache": true,
              "modelTokenSize": 128,
              "maxMemoryUsageMB": 1024,
              "enableDebugLog": false,
              "logLevel": "INFO"
            }
          }
        },
        "breeze_llm_mock_v1": {
          "type": "MOCK",
          "priority": 100,
          "model": {
            "modelName": "mock-llm-v1",
            "parameters": {
              "response_delay_ms": 100
            }
          }
        }
      }
    },
    "SPEECH_RECOGNITION": {
      "defaultRunner": "breeze_asr_mock_v1",
      "runners": {
        "breeze_asr_mock_v1": {
          "type": "MOCK",
          "priority": 100,
          "model": {
            "modelName": "mock-asr-v1",
            "parameters": {
              "processing_delay_ms": 300
            }
          }
        }
      }
    },
    "IMAGE_ANALYSIS": {
      "defaultRunner": "breeze_vlm_mock_v1",
      "runners": {
        "breeze_vlm_mock_v1": {
          "type": "MOCK",
          "priority": 100,
          "model": {
            "modelName": "mock-vlm-v1",
            "parameters": {
              "analysis_delay_ms": 400
            }
          }
        }
      }
    },
    "SPEECH_SYNTHESIS": {
      "defaultRunner": "breeze_tts_mock_v1",
      "runners": {
        "breeze_tts_mock_v1": {
          "type": "MOCK",
          "priority": 100,
          "model": {
            "modelName": "mock-tts-v1",
            "parameters": {
              "synthesis_delay_ms": 250,
              "voice_id": "female_alt"
            }
          }
        }
      }
    }
  }
} 