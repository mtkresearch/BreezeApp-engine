<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 啟用且選中狀態 -->
    <item android:state_enabled="true" android:state_checked="true" android:color="@color/primary_light" />
    <!-- 啟用但未選中狀態 -->
    <item android:state_enabled="true" android:state_checked="false" android:color="@color/outline_variant" />
    <!-- 禁用狀態 -->
    <item android:state_enabled="false" android:color="@color/disabled_bg" />
    <!-- 預設狀態 -->
    <item android:color="@color/outline_variant" />
</selector> 