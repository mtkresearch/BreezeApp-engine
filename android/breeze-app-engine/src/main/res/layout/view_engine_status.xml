<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvStatusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engine Connection Status"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="12dp" />

    <!-- Status Row: Indicator + Label -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Status Indicator Dot -->
        <View
            android:id="@+id/vStatusIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/status_indicator_background"
            tools:backgroundTint="#808080" />

        <!-- Status Label -->
        <TextView
            android:id="@+id/tvStatusLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            tools:text="Connected" />

        <!-- Manual Reconnect Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReconnect"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reconnect"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <!-- Engine Version -->
    <TextView
        android:id="@+id/tvEngineVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:visibility="gone"
        tools:text="Engine Version: 1.5.0"
        tools:visibility="visible" />

    <!-- Last Connection Time -->
    <TextView
        android:id="@+id/tvLastConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:visibility="gone"
        tools:text="Connected 2 minutes ago"
        tools:visibility="visible" />

    <!-- Error Message (shown only when Error state) -->
    <TextView
        android:id="@+id/tvErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="?attr/colorError"
        android:visibility="gone"
        tools:text="Connection failed: Engine not found"
        tools:visibility="visible" />

</LinearLayout>
