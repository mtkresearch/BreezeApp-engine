<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.EngineSettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/ai_engine_settings"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Capability Tabs - Simplified -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@color/surface"
                app:tabMode="scrollable"
                app:tabGravity="start"
                app:tabIndicatorColor="@color/primary"
                app:tabSelectedTextColor="@color/primary"
                app:tabTextColor="@color/text_secondary"
                app:tabIndicatorHeight="3dp" />

            <!-- Runner Selection Section - Cleaner Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/runner_selection"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvCapabilityLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="@string/select_runner_for_capability"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerRunners"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvRunnerDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/runner_description_placeholder"
                        android:textSize="12sp"
                        android:textColor="@color/text_tertiary"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:id="@+id/chipGroupRunnerStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/chipSupported"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/supported"
                            android:background="@drawable/chip_success_background"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/chipNotSupported"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/not_supported"
                            android:background="@drawable/chip_error_background"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- API Key Section (for OpenRouter) - Isolated -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardApiKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/authentication"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/api_key"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/editApiKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:hint="@string/enter_api_key_hint"
                        android:inputType="textPassword"
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:background="@android:drawable/editbox_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/get_api_key_help"
                        android:textSize="11sp"
                        android:textColor="@color/text_tertiary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Model Price Filter Section (for OpenRouter) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPriceFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/model_price_filter"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPriceLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/free_models_only"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/seekBarPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="0"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvModelCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/loading_models"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRefreshModels"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/refresh"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:minWidth="80dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Dynamic Parameters Section - Cleaner Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardParameters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/runner_parameters"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvParametersHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_runner_hint"
                        android:textSize="13sp"
                        android:textColor="@color/text_tertiary"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:textStyle="italic" />

                    <!-- Container for dynamically generated parameter views -->
                    <LinearLayout
                        android:id="@+id/containerParameters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Test Section -->
            <include layout="@layout/quick_test_section" />

            <!-- Save Button - Material Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="@string/save_settings"
                android:textSize="15sp"
                android:textAllCaps="false"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/primary"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Progress Overlay for Save Operation -->
    <FrameLayout
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminateTint="@android:color/white" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>