<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 聚焦狀態 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/input_container_bg" />
            <stroke
                android:width="2dp"
                android:color="@color/primary" />
            <corners android:radius="12dp" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>
    
    <!-- 正常狀態 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/input_container_bg" />
            <stroke
                android:width="1dp"
                android:color="@color/input_border" />
            <corners android:radius="12dp" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>
    
</selector> 