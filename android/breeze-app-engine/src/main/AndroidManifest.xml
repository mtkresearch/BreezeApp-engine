<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ===================== 基本權限 ===================== -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROCESSING" />

    <!-- ===================== 外部 SDK 綁定權限 ===================== -->
    <permission
        android:name="com.mtkresearch.breezeapp.permission.BIND_ENGINE_SERVICE"
        android:protectionLevel="normal"
        android:label="@string/permission_bind_engine_label"
        android:description="@string/permission_bind_engine_desc" />

    <application
        android:allowBackup="true"
        android:label="BreezeApp Engine"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- ===================== Neuron SDK / MTK NPU Support ===================== -->
        <uses-native-library
            android:name="libapuwareutils_v2.mtk.so"
            android:required="false" />

        <uses-native-library
            android:name="libapuwareapusys_v2.mtk.so"
            android:required="false" />

        <uses-native-library
            android:name="libnir_neon_driver_ndk.mtk.so"
            android:required="false" />

        <uses-native-library
            android:name="libnir_neon_driver_ndk.mtk.vndk.so"
            android:required="false" />

        <uses-native-library
            android:name="libcmdl_ndk.mtk.vndk.so"
            android:required="false" />

        <uses-native-library
            android:name="libcmdl_ndk.mtk.so"
            android:required="false" />

        <uses-native-library
            android:name="libneuronusdk_adapter.mtk.so"
            android:required="false" />
        
        <uses-native-library
            android:name="libc++_shared.so"
            android:required="false" />


        <!-- ===================== Engine 主活動入口 ===================== -->
        <activity
            android:name=".ui.BreezeAppEngineLauncherActivity"
            android:exported="true"
            android:label="BreezeApp Engine"
            android:theme="@style/Theme.BreezeApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ===================== 設定頁面 ===================== -->
        <activity
            android:name=".ui.EngineSettingsActivity"
            android:exported="true"
            android:label="AI Engine Settings"
            android:theme="@style/Theme.BreezeApp" />

        <!-- ===================== 下載進度頁面 ===================== -->
        <activity
            android:name=".ui.DownloadProgressActivity"
            android:exported="false"
            android:label="Download Progress"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Material.Dialog.NoActionBar" />

        <!-- ===================== BreezeAppEngine Service ===================== -->
        <service
            android:name=".BreezeAppEngineService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="dataSync|microphone"
            android:stopWithTask="false"
            android:permission="com.mtkresearch.breezeapp.permission.BIND_ENGINE_SERVICE">

            <!-- Action 供 EdgeAI SDK 綁定 -->
            <intent-filter>
                <action android:name="com.mtkresearch.breezeapp.engine.BreezeAppEngineService" />
            </intent-filter>
        </service>

        <!-- ===================== Model Download Service ===================== -->
        <service
            android:name=".core.download.ModelDownloadService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            android:stopWithTask="false" />

    </application>

</manifest>