<?xml version="1.0" encoding="utf-8"?>
<!--
    BreezeApp-engine String Resources

    Contains:
    - App metadata (name, version)
    - Permission labels and descriptions
    - Service metadata
    - Error messages

    @author BreezeApp Team
    @since 1.0.0
-->
<resources>
    <!-- ========================================================================
         APPLICATION METADATA
         ======================================================================== -->

    <string name="app_name">BreezeApp AI Engine</string>
    <string name="engine_version">1.0.0</string>
    <string name="engine_description">AI Inference Service for BreezeApp Ecosystem</string>

    <!-- ========================================================================
         CUSTOM PERMISSION STRINGS (T032-T033)
         ======================================================================== -->

    <!--
        Standard signature-level permission
        Used by: Most client apps (BreezeApp, BreezeApp Dot)
    -->
    <string name="permission_bind_engine_label">Bind to BreezeApp AI Engine</string>
    <string name="permission_bind_engine_desc">
        Allows the application to bind to BreezeApp AI inference engine service
        for language model, vision, speech recognition, and text-to-speech capabilities.
        Only authorized applications with matching signature can bind.
    </string>

    <!--
        Privileged permission variant (optional, commented out by default)
        Used by: System apps, OEM customizations
    -->
    <string name="permission_bind_engine_privileged_label">Bind to BreezeApp AI Engine (Privileged)</string>
    <string name="permission_bind_engine_privileged_desc">
        Allows system and privileged applications to bind to BreezeApp AI Engine service.
        This permission is reserved for system-level integrations and OEM customizations.
    </string>

    <!-- ========================================================================
         SERVICE METADATA
         ======================================================================== -->

    <string name="service_name">BreezeApp AI Engine Service</string>
    <string name="service_description">Background AI inference service</string>

    <!-- Foreground service notification (required for Android 8+) -->
    <string name="foreground_service_notification_title">BreezeApp Engine Active</string>
    <string name="foreground_service_notification_message">AI inference engine is running</string>
    <string name="foreground_service_channel_name">AI Engine Service</string>
    <string name="foreground_service_channel_desc">Notifications for AI inference service status</string>

    <!-- ========================================================================
         ERROR MESSAGES
         ======================================================================== -->

    <!-- Binding errors -->
    <string name="error_engine_not_installed">BreezeApp Engine is not installed</string>
    <string name="error_permission_denied">Permission denied to bind to AI Engine</string>
    <string name="error_signature_mismatch">Signature mismatch: unauthorized app</string>
    <string name="error_version_incompatible">Engine version incompatible with this app</string>
    <string name="error_service_timeout">Engine service connection timeout</string>

    <!-- Inference errors -->
    <string name="error_model_not_loaded">AI model not loaded</string>
    <string name="error_inference_failed">AI inference failed</string>
    <string name="error_invalid_params">Invalid inference parameters</string>
    <string name="error_resource_exhausted">System resources exhausted</string>

    <!-- ========================================================================
         USER-FACING MESSAGES
         ======================================================================== -->

    <!-- Update prompts -->
    <string name="update_engine_required_title">Engine Update Required</string>
    <string name="update_engine_required_message">
        BreezeApp Engine must be updated to continue.
        This will take about 30 seconds.
    </string>
    <string name="update_engine_available_title">Engine Update Available</string>
    <string name="update_engine_available_message">
        A new version of BreezeApp Engine is available with improved performance.
    </string>

    <!-- Action buttons -->
    <string name="action_update_now">Update Now</string>
    <string name="action_later">Later</string>
    <string name="action_install">Install</string>
    <string name="action_cancel">Cancel</string>

    <!-- ========================================================================
         DIAGNOSTICS (Optional, for debugging)
         ======================================================================== -->

    <string name="diagnostics_title">BreezeApp Engine Diagnostics</string>
    <string name="diagnostics_version">Version: %1$s</string>
    <string name="diagnostics_api_version">API Version: %1$d</string>
    <string name="diagnostics_uptime">Uptime: %1$s</string>
    <string name="diagnostics_memory_usage">Memory Usage: %1$s MB</string>
    <string name="diagnostics_active_connections">Active Connections: %1$d</string>

    <!-- ========================================================================
         PLACEHOLDERS (Replace with actual values in production)
         ======================================================================== -->

    <!-- These should be overridden in build.gradle with actual build info -->
    <string name="build_version_code" translatable="false">1</string>
    <string name="build_timestamp" translatable="false">2025-11-03</string>
    <string name="build_type" translatable="false">debug</string>

</resources>
